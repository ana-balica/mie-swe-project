            <TransformInput function="stripUriPrefix">
              <Input path="?b" />
            </TransformInput>
          </Compare>
      </LinkageRule>

      <Filter />

      <Outputs>
        <Output type="file" minConfidence="0.5">
          <Param name="file" value="country_names_lgd_tourism_minconfidence.xml"/>
          <Param name="format" value="alignment"/>
        </Output>
        <Output type="file" maxConfidence="0.5">
          <Param name="file" value="country_names_lgd_tourism_maxconfidence.xml"/>
          <Param name="format" value="alignment"/>
        </Output>
      </Outputs>
    </Interlink>

    <Interlink id="country_names_airports">
      <LinkType>owl:sameAs</LinkType>

      <SourceDataset dataSource="linkedgeodata" var="a">
        <RestrictTo>
          ?a rdf:type lgdo:Country
        </RestrictTo>
